@model NotificationViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="page-header">
    <h1>Results And Certification Notifications POC</h1>
</div>

<div class="row">
    <div class="col-md-12">
        <form method="post" defaultButton="btnSubmit">
            <p>
                <span>
                    <label asp-for="@Model.EmailTo">Mail to:</label>
                    <input asp-for="@Model.EmailTo" value="@Model.EmailTo" />
                </span>
            </p>

            <p>
                <span>
                    <label asp-for="@Model.ReciepientName">Reciepient name:</label>
                    <input asp-for="@Model.ReciepientName" value="@Model.ReciepientName" />
                </span>
            </p>

            <p>
                <span>
                    <label asp-for="@Model.TlevelName">Tlevel name:</label>
                    <input asp-for="@Model.TlevelName" value="@Model.TlevelName" />
                </span>
            </p>

            
            <p>
                <span>
                    <label asp-for="@Model.TemplateName">Template name:</label>
                    <input asp-for="@Model.TemplateName" value="@Model.TemplateName" />
                </span>
            </p>
            <p>
                <span>
                    <input id="btnSubmit" class="button" type="submit" value="Send">
                </span>
            </p>
        </form>
    </div>
</div>
